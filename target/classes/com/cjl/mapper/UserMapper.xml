<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjl.mapper.UserMapper">

	<resultMap id="userMap" type="com.cjl.model.UserModel">
		<id column="id" property="id" jdbcType="BIGINT"></id>
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="user_sex" property="userSex" jdbcType="VARCHAR" />
		<result column="entry_date" property="entryDate" jdbcType="TIMESTAMP" />
	</resultMap> 

	<select id="selectUserById" parameterType="Long" resultMap="userMap">
		select * from func_user u where u.id = #{id}
	</select>

	<insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
		insert into func_user(
		user_name,user_sex,
		<if test="entryDate!=null and entryDate!=''">
		entry_date
		</if>) 
		values(#{userName},#{userSex},
		<if test="entryDate!=null and entryDate!=''">
		#{entryDate,jdbcType=TIMESTAMP})
		</if>
	</insert>
	
	<delete id="deleteUserById">
		delete from func_user where id=#{id}
	</delete>

	<update id="updateUserById">
		update func_user 
		 set
		 <if test="userName!=null and userName!=''">
		  user_name=#{userName},	
		 </if>
		 <if test="userSex!=null and userSex!=''">
		 user_sex=#{userSex},
		 </if>
		 <if test="entryDate!=null and entryDate!=''">
		 entry_date=#{entryDate,jdbcType=TIMESTAMP}
		 </if>
		 id=#{id}
		where id=#{id}
	</update>
	
	<select id="selectUserByUserNameAndEntryDate" resultType="com.cjl.model.UserModel">
		select id,
			user_name userName,
			user_sex userSex,
			entry_date entryDate
		from func_user 
		where user_name like concat('%',#{userName},'%')
	</select>
	</mapper>